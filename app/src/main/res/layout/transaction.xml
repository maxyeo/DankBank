<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.maxwellyeo.dankbank.Transaction">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5000"
                android:id="@+id/log" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNDO"
                android:textColor="@color/yellow"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="18sp"
                android:layout_gravity="right" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Trans Amount"
            android:id="@+id/trans_amount"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/cent"
                android:id="@+id/penny"
                android:background = "@drawable/pennybutton"
                android:textSize="25sp"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/nickel"
                android:id="@+id/nickel"
                android:background = "@drawable/roundedbutton"
                android:textSize="25sp"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/dime"
                android:id="@+id/dime"
                android:background = "@drawable/roundedbutton"
                android:textSize="25sp"
                />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/quarter"
                android:id="@+id/quarter"
                android:background = "@drawable/roundedbutton"
                android:textSize="25sp"
                />
        </LinearLayout>


        <!--1/5 Dollar Bills-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/dollar_1"
                android:background="@color/cash_green"
                android:textColor="@color/grey"
                android:id="@+id/dollar_1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/dollar_5"
                android:background="@color/cash_green"
                android:textColor="@color/grey"
                android:id="@+id/dollar_5"/>
        </LinearLayout>

        <!--10/20 Dollar Bills-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/dollar_10"
                android:background="@color/cash_green"
                android:textColor="@color/grey"
                android:id="@+id/dollar_10" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/dollar_20"
                android:background="@color/cash_green"
                android:textColor="@color/grey"
                android:id="@+id/dollar_20"/>
        </LinearLayout>
    </LinearLayout>

    <!--Withdraw/Deposit Buttons-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:text="@string/withdraw"
            android:background="@color/colorPrimary"
            android:textColor="@color/grey"
            android:id="@+id/withdraw"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:text="@string/deposit"
            android:background="@color/colorSecondary"
            android:textColor="@color/grey"
            android:id="@+id/deposit"/>
    </LinearLayout>
</RelativeLayout>