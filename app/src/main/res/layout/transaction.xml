<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.maxwellyeo.dankbank.Transaction">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/grey"
                android:layout_gravity="center_vertical"
                android:id="@+id/log" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/undo"
                android:textColor="@color/yellow"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:onClick="undo"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$0.00"
            android:id="@+id/trans_amount"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/grey"
            android:textSize="45sp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/penny"
                android:background="@drawable/coin_1"
                android:textSize="25sp"
                android:onClick="addCent"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/nickel"
                android:background="@drawable/coin_5"
                android:textSize="25sp"
                android:onClick="addNickel"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/dime"
                android:background="@drawable/coin_10"
                android:textSize="25sp"
                android:onClick="addDime"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/quarter"
                android:background="@drawable/coin_25"
                android:textSize="25sp"
                android:onClick="addQuarter"/>
        </LinearLayout>


        <!--1/5 Dollar Bills-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bill_1"
                android:textColor="@color/grey"
                android:id="@+id/dollar_1"
                android:onClick="add1dollar"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bill_5"
                android:textColor="@color/grey"
                android:id="@+id/dollar_5"
                android:onClick="add5dollar"/>
        </LinearLayout>

        <!--10/20 Dollar Bills-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bill_10"
                android:textColor="@color/grey"
                android:id="@+id/dollar_10"
                android:onClick="add10dollar"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bill_20"
                android:textColor="@color/grey"
                android:id="@+id/dollar_20"
                android:onClick="add20dollar"/>
        </LinearLayout>
    </LinearLayout>

    <!--Withdraw/Deposit Buttons-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:text="@string/withdraw"
            android:background="@color/colorPrimary"
            android:textColor="@color/grey"
            android:id="@+id/withdraw"
            android:onClick="withdraw"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:text="@string/deposit"
            android:background="@color/colorSecondary"
            android:textColor="@color/grey"
            android:id="@+id/deposit"
            android:onClick="deposit"/>
    </LinearLayout>
</RelativeLayout>